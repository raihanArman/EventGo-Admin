<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="event"
            type="com.example.eventgoadmin.request.model.Event" />
        <variable
            name="user"
            type="com.example.eventgoadmin.request.model.User" />
        <variable
            name="tanggal"
            type="String" />
        <variable
            name="jam"
            type="String" />
    </data>
    <androidx.core.widget.NestedScrollView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorPrimary">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/iv_back"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_baseline_arrow_back_ios_24"
                    android:tint="@android:color/white"/>
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detail Event"
                    android:layout_marginLeft="10dp"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/nunito"
                    android:textSize="20sp"
                    android:layout_toRightOf="@id/iv_back"/>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_edit"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_user_call"
                    android:backgroundTint="#FF9800"
                    android:fontFamily="@font/nunito"
                    android:gravity="center"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="5dp"
                    android:text="Edit"
                    android:textColor="@android:color/white" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/layout_kas">
                <LinearLayout
                    android:id="@+id/lv_container_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_marginTop="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_img"
                            android:layout_width="160dp"
                            android:layout_height="200dp"
                            app:cardCornerRadius="8dp"
                            android:layout_margin="10dp">
                            <ImageView
                                android:id="@+id/iv_pamflet"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:imageUrl="@{event.pamflet}"
                                android:scaleType="centerCrop"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toRightOf="@id/cv_img"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="30dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Kategori"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:fontFamily="@font/nunito"
                                android:textSize="15sp"/>
                            <TextView
                                android:id="@+id/tv_kategori"
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:layout_height="wrap_content"
                                tools:text="@{event.namaKategori}"
                                android:textColor="#000000"
                                android:fontFamily="@font/nunito"
                                android:textSize="15sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Judul"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:fontFamily="@font/nunito"
                                android:textSize="15sp"/>
                            <TextView
                                android:id="@+id/tv_judul_kajian"
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:layout_height="wrap_content"
                                tools:text="@{event.judul}"
                                android:textColor="@android:color/black"
                                android:fontFamily="@font/nunito"
                                android:textSize="15sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Sub Judul"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:fontFamily="@font/nunito"
                                android:textSize="15sp"/>
                            <TextView
                                android:id="@+id/tv_sub_judul"
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:layout_height="wrap_content"
                                tools:text="@{event.subJudul}"
                                android:textColor="@android:color/black"
                                android:fontFamily="@font/nunito"
                                android:textSize="15sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Tanggal"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:fontFamily="@font/nunito"
                                android:textSize="15sp"/>
                            <TextView
                                android:id="@+id/tv_tanggal"
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:layout_height="wrap_content"
                                tools:text="@{tanggal}"
                                android:textColor="@android:color/black"
                                android:fontFamily="@font/nunito"
                                android:textSize="15sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Jam"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:fontFamily="@font/nunito"
                                android:textSize="15sp"/>
                            <TextView
                                android:id="@+id/tv_jam"
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:layout_height="wrap_content"
                                tools:text="@{jam}"
                                android:textColor="@android:color/black"
                                android:fontFamily="@font/nunito"
                                android:textSize="15sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Lokasi"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:fontFamily="@font/nunito"
                                android:textSize="15sp"/>
                            <TextView
                                android:id="@+id/tv_lokasi"
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:layout_height="wrap_content"
                                tools:text="@{event.lokasi}"
                                android:textColor="@android:color/black"
                                android:fontFamily="@font/nunito"
                                android:textSize="15sp"/>
                        </LinearLayout>

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="8dp">
                        <LinearLayout
                            android:padding="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lampiran"
                                android:layout_marginBottom="10dp"
                                android:textSize="20sp"
                                android:textColor="@android:color/black"
                                android:fontFamily="@font/nunito"/>
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_lampiran"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">
                        <LinearLayout
                            android:padding="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Panitia"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:fontFamily="@font/nunito"
                                android:layout_marginBottom="10dp"
                                android:textSize="15sp"/>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/iv_user"
                                    android:layout_width="30dp"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginRight="10dp"
                                    android:layout_centerVertical="true"
                                    android:layout_height="30dp"
                                    android:layout_alignParentLeft="true"
                                    android:src="@drawable/bg_horizontal" />
                                <TextView
                                    android:id="@+id/tv_user"
                                    android:layout_toRightOf="@id/iv_user"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@{event.namaPanitia}"
                                    android:textSize="20sp"
                                    android:textColor="#000000"
                                    android:fontFamily="@font/nunito"/>
                            </RelativeLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="10dp">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="2"
                                    android:layout_height="wrap_content"
                                    android:text="No Hp : "
                                    android:textStyle="bold"
                                    android:textColor="#000000"
                                    android:fontFamily="@font/nunito"
                                    android:textSize="15sp"/>
                                <TextView
                                    android:id="@+id/tv_no_hp_pengusul"
                                    android:layout_width="0dp"
                                    android:layout_weight="4"
                                    android:layout_height="wrap_content"
                                    android:text="@{event.noHpPanitia}"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/nunito"
                                    android:textSize="15sp"/>                        <ImageView
                                android:id="@+id/iv_no_telp_pengusul"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_local_phone_black_24dp"/>
                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:id="@+id/layout_konfirmasi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="30dp"
                        android:visibility="gone">
                        <Button
                            android:id="@+id/btn_terima"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_button"
                            android:backgroundTint="#4CAF50"
                            android:text="Terima"
                            android:fontFamily="@font/nunito"
                            android:textSize="15sp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginLeft="8dp"
                            />
                        <Button
                            android:id="@+id/btn_tolak"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_button"
                            android:backgroundTint="#FB1B2D"
                            android:text="Tolak"
                            android:fontFamily="@font/nunito"
                            android:textSize="15sp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginLeft="8dp"
                            />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lv_connection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@drawable/wifi" />
                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tidak ada koneksi internet"
                        android:textSize="25sp"
                        android:fontFamily="@font/nunito"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>



    </androidx.core.widget.NestedScrollView>
</layout>